<%= form_for(@product, multipart: true) do |f| %>
  <div>
    <%= f.submit class: 'btn btn-primary'%>
    <%= link_to 'Back', category_path(@category), class: 'btn btn-secondary' %>
  </div>  
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, class: 'col-2 col-form-label' %><br>
      <div class="col-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: 'col-2 col-form-label' %><br>
      <div class="col-10">
        <%= f.text_area :description, class: 'form-control', rows: '15' %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :link_pdf, class: 'col-2 col-form-label' %><br>
      <div class="col-10">
        <%= f.text_field :link_pdf, class: 'form-control' %>
      </div>
    </div>
      
    <div class='images-input-container'>
      <label class="custom-file">
        <%= f.label :logo, class:'col-4 col-form-label' %><br>
        <div class='col-10'>
          <%= f.file_field :logo, value:'Logo.jpg' %>
        </div>
      </label>

      <label class="custom-file">
        <%= f.label :product_image, class:'col-4 col-form-label' %><br>
        <div class='col-10'>
          <%= f.file_field :logo, value:'Logo.jpg' %>
        </div>
      </label>
    </div>
    <% unless @category.nil? %>
      <%= f.hidden_field :category_id, value: @category.id %>
    <% else %>
        <%= f.hidden_field :category_id, value: @product.category_id %>
    <%end%>
<% end %>